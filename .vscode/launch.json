{
  // VS Code debug configurations for AI Answer Checker
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug All Tests - pay-details-us-agent",
      "type": "python",
      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "ai_answer_checker",
      "args": [
        "--agent", "pay-details-us-agent"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug Single Test - why_net_higher_bonus_period",
