      "request": "launch",
      "python": "${workspaceFolder}/.venv/bin/python",
      "module": "ai_answer_checker",
      "args": [
        "--agent", "pay-details-us-agent",
        "--test", "why_net_higher_bonus_period",
        "--stubs-port", "9493"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
